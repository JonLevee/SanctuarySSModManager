<Application x:Class="SanctuarySSModManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SanctuarySSModManager"
             xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             Startup="OnStartup"
             Exit="OnExit"
             >
    <Application.Resources>
        <!-- -->
        <FontFamily x:Key="Oswald">pack://application:,,,/Fonts/Oswald/#Oswald</FontFamily>
        <!-- TargetType="{x:Type Window}" -->
        <Style TargetType="ContentControl">
            <Setter Property="FontFamily" Value="{StaticResource Oswald}" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource Oswald}" />
            <Setter Property="FontWeight" Value="Regular" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource Oswald}" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource Oswald}" />
            <Setter Property="FontWeight" Value="ExtraLight" />
        </Style>
    </Application.Resources>

</Application>
